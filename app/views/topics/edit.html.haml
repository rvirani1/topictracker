.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Edit
      .panel-body
        = form_tag(topic_path(@topic), method: :patch, role: "form") do
          .form-group
            = text_field_tag(:title, @topic.title, :required => "required", :class => "form-control")
          .form-group
            = select_tag "tag_selector", select_list(@topic), multiple: true, placeholder: "Select tag(s)...", class: "selectize-control tag_selector"
          .form-group
            = text_area_tag(:description, @topic.description, :required => "required", :class => "form-control", :rows => "5", :maxlength => "255", :id => "descriptionarea", :"data-provide" => "markdown")
          .form-group
            = link_to("Back", topics_path, class: "btn btn default" )
            = link_to "Delete", topic_path(@topic), :method => :delete, :class => "btn btn-danger", :type => "button"
            = submit_tag("Edit Topic", class: "btn btn-default")
  .col-md-3