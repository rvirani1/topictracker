.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title New Topic
      .panel-body
        = form_tag(topics_path, method: :post, role: "form") do
          .form-group
            = text_field_tag(:title, "", :required => "required", :class => "form-control", :placeholder => "Enter topic title")
          .form-group
            = text_area_tag(:description, "", :required => "required", :class => "form-control", :placeholder => "Enter topic description", :rows => "5", :maxlength => "255")
          .form-group
            = submit_tag("Create New Topic", class: "btn btn-default")
  .col-md-3