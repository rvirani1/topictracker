!!!
%html
  %head
    %title TopicTracker
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href=>"//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel=>"stylesheet"}
    %script{:src=>"//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
  %body
    %nav.navbar.navbar-default(role = "navigation")
      .navbar-header
        %a.navbar-brand TopicTracker
      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li.btn.btn-default= link_to "Logout", destroy_user_session_path, :method => :delete
        -else
          %li.btn.btn-default=link_to "Sign Up", new_user_registration_path
          %li.btn.btn-default=link_to "Login", new_user_session_path
    - if notice
      %p.notice= flash[:notice]
    -if alert
      %p.alert= flash[:alert]
    = yield
