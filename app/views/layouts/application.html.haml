!!!
%html
  %head
    %title TopicTracker
    %link{:href=>"//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel=>"stylesheet"}
    %script{:src=>"//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{:src=>"//cdn.jsdelivr.net/momentjs/2.8.1/moment.min.js"}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default(role = "navigation")
      .navbar-header
        =link_to "TopicTracker", root_path, class: "navbar-brand"
      .nav.navbar-nav.navbar-right
        -if user_signed_in?
          .btn.btn-default.navbar-btn.navbar-right= link_to "Logout", destroy_user_session_path, :method => :delete
          .btn.btn-default.navbar-btn.navbar-right= link_to "Profile", edit_user_registration_path
        -else
          .btn.btn-default.navbar-btn.navbar-right=link_to "Login", new_user_session_path
          .btn.btn-default.navbar-btn.navbar-right=link_to "Sign Up", new_user_registration_path
    - if notice
      #notice.invisible{ :"data-notice" => flash[:notice] }= flash[:notice]
    -if alert
      #alert.invisible{ :"data-alert" => flash[:alert] }= flash[:alert]
    = yield
